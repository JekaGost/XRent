<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cars_rent.ProfileController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="İsim:" />
        <Label fx:id="firstNameLabel" layoutX="100.0" layoutY="30.0" text="..." />

        <Label layoutX="30.0" layoutY="70.0" text="Soyisim:" />
        <Label fx:id="lastNameLabel" layoutX="100.0" layoutY="70.0" text="..." />

        <Label layoutX="30.0" layoutY="110.0" text="E-posta:" />
        <Label fx:id="emailLabel" layoutX="100.0" layoutY="110.0" text="..." />

        <Label layoutX="30.0" layoutY="150.0" text="Telefon No:" />
        <Label fx:id="phoneNumberLabel" layoutX="100.0" layoutY="150.0" text="..." />

        <Button layoutX="250.0" layoutY="30.0" text="Değiştir" onAction="#editFirstName" />
        <Button layoutX="250.0" layoutY="70.0" text="Değiştir" onAction="#editLastName" />
        <Button layoutX="250.0" layoutY="110.0" text="Değiştir" onAction="#editEmail" />
        <Button layoutX="250.0" layoutY="150.0" text="Değiştir" onAction="#editPhoneNumber" />

        <Button layoutX="30.0" layoutY="200.0" text="Geri" onAction="#onBackButtonClick" />
    </children>
</AnchorPane>

