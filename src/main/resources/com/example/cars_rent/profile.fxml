<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cars_rent.ProfileController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="Имя:" />
        <Label fx:id="firstNameLabel" layoutX="100.0" layoutY="30.0" text="..." />

        <Label layoutX="30.0" layoutY="70.0" text="Фамилия:" />
        <Label fx:id="lastNameLabel" layoutX="100.0" layoutY="70.0" text="..." />

        <Label layoutX="30.0" layoutY="110.0" text="Email:" />
        <Label fx:id="emailLabel" layoutX="100.0" layoutY="110.0" text="..." />

        <Label layoutX="30.0" layoutY="150.0" text="Телефон:" />
        <Label fx:id="phoneNumberLabel" layoutX="100.0" layoutY="150.0" text="..." />

        <Button layoutX="250.0" layoutY="30.0" text="Изменить" onAction="#editFirstName" />
        <Button layoutX="250.0" layoutY="70.0" text="Изменить" onAction="#editLastName" />
        <Button layoutX="250.0" layoutY="110.0" text="Изменить" onAction="#editEmail" />
        <Button layoutX="250.0" layoutY="150.0" text="Изменить" onAction="#editPhoneNumber" />

        <Button layoutX="30.0" layoutY="200.0" text="Назад" onAction="#onBackButtonClick" />
    </children>
</AnchorPane>

