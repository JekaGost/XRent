<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cars_rent.CarDetailsController">
    <children>
        <Label fx:id="carTitleLabel" layoutX="20.0" layoutY="20.0" text="Марка и Модель" wrapText="true">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="transmissionLabel" layoutX="20.0" layoutY="80.0" text="Коробка передач: " />
        <Label fx:id="engineCapacityLabel" layoutX="20.0" layoutY="110.0" text="Объем двигателя: " />
        <Label fx:id="fuelTypeLabel" layoutX="20.0" layoutY="140.0" text="Тип топлива: " />
        <Label fx:id="horsepowerLabel" layoutX="20.0" layoutY="170.0" text="Мощность: " />
        <Label fx:id="driveTypeLabel" layoutX="20.0" layoutY="200.0" text="Тип привода: " />
        <Label fx:id="accelerationLabel" layoutX="20.0" layoutY="230.0" text="Разгон до 100 км/ч: " />
        <Label fx:id="engineTypeLabel" layoutX="20.0" layoutY="260.0" text="Тип двигателя: " />
        <Label fx:id="fuelConsumptionLabel" layoutX="20.0" layoutY="290.0" text="Расход топлива: " />
        <Label fx:id="electricRangeLabel" layoutX="20.0" layoutY="320.0" text="Запас хода на электричестве: " visible="false" />
        <Label fx:id="statusLabel" layoutX="20.0" layoutY="350.0" text="Статус: " />
        <Rectangle fx:id="statusIndicator" layoutX="80.0" layoutY="350.0" height="20.0" width="20.0" stroke="BLACK" />
        <Button fx:id="reserveButton" layoutX="450.0" layoutY="350.0" mnemonicParsing="false" text="Зарезервировать" />
        <Button fx:id="backButton" layoutX="20.0" layoutY="380.0" mnemonicParsing="false" text="Назад" />
    </children>
</AnchorPane>
